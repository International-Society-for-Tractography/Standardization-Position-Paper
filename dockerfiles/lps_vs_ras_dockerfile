# Use official Python base image with a specific version
FROM python:3.10-slim

LABEL maintainer="jhlegarreta@bwh.harvard.edu"
LABEL version="1.0.0"
LABEL description="LPS vs RAS environment"

# Install git
RUN apt-get update && apt-get install -y git && rm -rf /var/lib/apt/lists/*

# Set working directory inside container
WORKDIR /app

# Install OpenGL dependencies
RUN apt-get update && apt-get install -y \
    libgl1 \
    libglib2.0-0 \
    libxrender1 \
    libsm6 \
    libxext6 \
    && rm -rf /var/lib/apt/lists/*

# Clone the repository
RUN git clone https://github.com/International-Society-for-Tractography/Standardization-Position-Paper.git .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements/requirements_lps_vs_ras_nb.txt

# Set default command (optional, e.g., start script or shell)
CMD ["bash"]
